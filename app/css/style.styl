@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_helper.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.2
	letter-spacing 0.01em
	background: #ebe9ea
.main-cont
	center(1200px,10px)

.page
	f()
	fl()
	min-height 100vh

.content
	flex-grow 1

.content--mid
	flex(mid)

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed
	top 0
	left 0
	background white
	width 100%
	margin 0
	animation:  slideInDown  1s 1 ease-in-out;
	z-index 10
// animate top menu === end

// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	margin-bottom: 30px
	font-weight: 700
	color $gray
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	color $gray
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	height: 100vh
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(768px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9)
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	max-width 420px
	z-index -1
	left -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal-content
	+below(640px)
		height: 100%
		padding: 20px
		overflow-y scroll
		width: 95%!important
		margin: 20px auto
	background: white
	position: relative
	padding: 40px 45px
	br(40px)

.modal__show
	max-height 100%
	opacity 1
	transform scale(1)
	position: relative
	z-index 1000
	left initial
	transition transform .6s, opacity .8s
.modal-close
	+below(768px)
		top 12px
		right 12px
	position: absolute
	top: 20px
	right: 20px
	cp()
	size 50px
	br(20px)
	flex(mid)
	z-index 10
	background: #f8f8f8
	&:hover
		.icon
			opacity: 1
	.icon
		tr()
		size 12px
		fill black
		opacity:.3

.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 20px
	text-align: center
	@extend .type--xl
	font-weight: 700

.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 20px auto
	//width: 80%
	line-height: 1.6


.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%
// modal === end


.header
	position: fixed
	top 0
	left 0
	width: 100%
	padding: 20px 30px
	flex(between)
	z-index 10
.section-main
	bg-full()
	height: 100vh
	background-attachment: fixed
.nav
	f()
	align-items center
.nav__el
	margin-right: 30px
	flex(mid)
	fl()
	tr()
	&:hover
		color $mark
.nav__el-head
	margin-bottom: 10px
	font-family:brush
	font-size: 40px
	line-height: 1
.nav__el-sub
	font-weight: 700
	up()

.logo
	size 80px
.section-main__title
	font-family: brush
	font-size 10vw
	span
		display inline-block
		transform translateY(20%)

.section-main__info
	width: 100%
	height: 100%
	f()
	fl()
	justify-content: flex-end
	align-items center
.section-main__wrap
	f()
	fl()
	align-items center
	margin-bottom: 3%

.section-main__get
	margin-top: 10%
	@extend .btn--md
	@extend .btn--light
	letter-spacing 5px

.bg-text
	color white
	position absolute
	font-size: 18vw
	font-family:brush
	opacity: .4
	top 10%
	left 15%
.section
	padding: 5% 0
	position relative
.section--clear
	padding: 5% 0

.section-title
	text-align center
	margin-bottom: 60px
	z-index 5
.section-title__head
	font-size: 18px
	margin-bottom: 20px
	up()
.section-title__text
	font-family: brush
	font-size: 8vw
	position relative
	line-height: 1
.about-text
	center(1000px,10px)
	text-align center


.service-row
	display: grid
	grid-gap 30px
	grid-template-columns: repeat(4, 1fr)
	margin-bottom: 30px
.service-row--sm
	.service__el-img
		padding: 35% 10%
	.service__el-title
		margin-top: 20px
.service__el-img
	bg-full()
	padding: 70% 10%

.service__el-title
	margin-bottom: 20px
	font-size: 18px
	height: 20px
	up()
.service__el-title--right
	text-align: right

.service-slogan
	text-align center
	color white
	font-family brush
	font-size: 10vw

.service-text
	center(550px,10px)
	p
		font-size: 18px

.girl
	position absolute
	bottom 0
	right: 5%
	bg-full()
	padding: 30% 20%

.circle
	position absolute
	bg-full()
	padding: 28% 28%
.circle--left
	top 50%
	left -30%
.circle--right
	top -20%
	right: 0
	background-position 200px


.portfolio
	f()
	justify-content space-between
	align-items center
	margin-top: 50px
.portfolio-el
	padding: 40px 0
.portfolio-info
	width: 40%

.portfolio-title
	@extend .type--xl
	margin-bottom: 20px
	font-weight: 700
.portfolio-text
	font-size: 18px
	line-height: 1.6

.portfolio-img
	width: 60%
	flex(mid)
	position relative
	padding: 20% 10%
.portfolio-img__el
	bg-full()
	padding: 30% 40%
	position absolute
	border 10px solid white
	top 0
	bsh()
	cp()
	tr()
	transform scale(1)
	-webkit-filter unquote("grayscale(100%)")
	&:hover
		box-shadow 0px 3px 36px #b7b3b3
		-webkit-filter unquote("grayscale(0%)")
	&:nth-child(1)
		z-index 5
	&:nth-child(2)
		transform rotate(8deg)
	&:nth-child(2)
		transform rotate(12deg)

.portfolio-nav
	f()
	margin: 40px 0
.portfolio-nav__el
	background: white
	padding: 15px
	tr()
	cp()
	.icon
		size 18px
	&:hover
		background: darken(white,5)
